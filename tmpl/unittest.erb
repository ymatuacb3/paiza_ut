
require 'test/unit'

class TestPaiza < Test::Unit::TestCase

  def get_actual_answer input
    IO.popen 'ruby answer.rb', 'r+' do |io|
      io.puts input
      io.close_write
      io.gets
    end.chomp
  end

% task.ut_cases.each do |idx, exp, inp|
  def test_answer<%= idx %>
    expected = '<%= exp %>'
    input = "<%= inp.join '\\n' %>"
    actual = get_actual_answer(input)
    assert_equal(expected, actual)
  end

% end
end

